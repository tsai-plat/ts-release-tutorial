{
  "name": "ts-release-tutorial",
  "version": "0.0.2",
  "description": "TS + JEST",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "changeset": "changeset",
    "pkg:version": "changeset version",
    "publish:only": "changeset publish",
    "format": "prettier --write .",
    "lint": "eslint . -c .eslintrc.js --fix --max-warnings=0",
    "test": "jest --config jest.config.ts --runInBand --coverage --verbose",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "CMETAV",
  "license": "MIT",
  "devDependencies": {
    "@changesets/action": "github:changesets/action",
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/parser": "^8.18.1",
    "cross-env": "^7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "peerDependencies": {
    "eslint": "8.56.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npx eslint --fix --max-warnings=0",
      "npx prettier --writer"
    ],
    "*.{json,md}": "prettier --write"
  }
}
